
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new Course</h1>

      <%= simple_form_for @course do |f| %>
        <%= f.input :title %>
        <%= f.input :duration %>
        <%= cl_image_upload_tag(:file) %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>